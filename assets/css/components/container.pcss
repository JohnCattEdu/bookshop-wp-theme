.page-wrapper {
    @apply flex flex-row flex-wrap p-4 py-8;

    .container {
        &.--padded {
            @apply p-2;

            @screen md {
                @apply py-4;
            }
        }

        &.--sidebar {
            @apply mx-0 w-full;

            @screen md {
                @apply w-3/4;
            }
        }
    }
}

.pre-content-wrapper {
    @apply mb-4;
}

.container {
    @apply mx-auto;
}
